<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="group_asm_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_asm_category"/>
            <field 
                name="implied_ids"
                eval="[(4, ref('base.group_user'))]"
            />
        </record>
        <record id="group_asm_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_asm_category"/>
            <field 
                name="implied_ids"
                eval="[(4, ref('asm.group_asm_user'))]"
            />
            <field
                name="users"
                eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
            />
        </record>

        <record id="asm_asm_comp_rule" model="ir.rule">
            <field name="name">asm multi-company</field>
            <field name="model_id" ref="model_asm_asm" />
            <field name="global" eval="True" />
            <field
                name="domain_force"
            >['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>        
    </data>
</odoo>
