<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_asm_asm_search" model="ir.ui.view">
        <field name="name">asm.asm.search</field>
        <field name="model">asm.asm</field>
        <field name="arch" type="xml">
            <search string="ASM Search">
                <separator />
                <filter
                    string="Active"
                    name="active"
                    domain="[('active','=',True)]"
                />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active','=',False)]"
                />
                <separator />
                <field name="name" filter_domain="[('name', 'ilike', self)]" />
            </search>
        </field>
    </record>
    <record id="view_asm_asm_form" model="ir.ui.view">
        <field name="name">asm.asm.form</field>
        <field name="model">asm.asm</field>
        <field name="arch" type="xml">
            <form string="asm">
                <header>
                    <button name="test_status" 
                            id="test_status" 
                            string="ASM Test" 
                            type="object"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1 class="oe_title">
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="main">
                        <group>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />                        
                            <field name="url"/>
                            <field name="refresh_time" />
                        </group>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
    <record id="view_asm_asm_tree" model="ir.ui.view">
        <field name="name">asm.asm.tree</field>
        <field name="model">asm.asm</field>
        <field name="arch" type="xml">
            <tree string="asms" decoration-muted="not active">
                <field name="name"/>
                <field name="url" optional="hide"/>
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                />                        
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
</odoo>
