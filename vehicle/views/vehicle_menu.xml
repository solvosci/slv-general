    <menuitem
        id="menu_root"
        name="Vehicles"
        web_icon="vehicle,static/description/icon.png"/>

    <menuitem
        id="menu_tree"
        parent="menu_root"
        name="Vehicles"
        action="vehicle_action"
        sequence="1"/>

</odoo>
